@import "post-item/post-item-template.wxss";

 swiper{
     width:100%;
     height:600rpx;
 }
 /*less sass*/
 swiper image{
     width:100%;
     height:500rpx;
     margin-top: 5rpx;
 }
.title{
     width:100%;
     display: inline-block;
     background: #ccc;
     height:45rpx;
     color: rebeccapurple;
     overflow: hidden;
     text-overflow: ellipsis;
     white-space: nowrap;
 }
 .fen{
   margin-top: 20rpx;
   margin-bottom: 25rpx;
   height: 60rpx;
 }
 .one{
   width: 100rpx;
   font-size: 30rpx;
   text-align: center;
   font-weight: 600;
   height: 50rpx;
   line-height: 50rpx;
   margin-left: 20px;
   color: #405f80;
   border: 1px solid #405f80;
   border-radius: 10rpx;
   float: left;
 }
 .one.active{
   background: #405f80;
   color: #fff;
 }
