page {
  background-color: #5a9cd8;
  color: #fff;
}

.page {
  margin: 50rpx;
}

.top {
  display: flex;
  padding: 20rpx;
  flex-direction: row;
  background-color: #efefef;
  position: relative;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.input {
  width: 80%;
  font-size: 32rpx;
}

.icon {
  width: 10%;
  position: absolute;
  right: 0;
  bottom: 5rpx;
}

.body {
  text-align: center;
  display: flex;
  flex-direction: column;
}

.city text{
  font-size: 80rpx;
  color: #fff;
  font-family: MicroSoft Yahei;

}
text{
  color: #fff;
  font-family: MicroSoft Yahei;
}
.today text{
  font-size: 30rpx;

}
.today{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  text-align: center;
  margin-top: 15rpx;
}
.bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  text-align: center;
  margin-top: 15rpx;
}

.weather text{
  font-weight: bold;
  font-size: 38rpx;
  color: rgb(207, 211, 8);
}
.wind text{
  font-weight: bold;
  font-size: 30rpx;
  color: rgb(190, 19, 48);
}
.temp text{
  font-weight: bold;
  font-size: 30rpx;
  color: rgb(44, 145, 41);
  font-family: Arial, Helvetica, sans-serif;
}

input {
  color: #333;
}
.move{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  text-align: center;
  margin-top: 50rpx;
}
.one{
  display: flex;
  flex-direction: column;
  text-align: center;
  flex-basis: 45%;
  margin-top: 30rpx;
  margin-left: 20rpx;
  border: 1px solid #fff;
  border-radius: 30rpx;
  padding: 10rpx 0rpx;
}
